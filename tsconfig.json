{
  "compilerOptions": {
    "outDir": "./",
    "strict": true,
    "sourceMap": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "removeComments": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}
