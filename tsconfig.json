{
  "compilerOptions": {
    "outDir": "./",
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
